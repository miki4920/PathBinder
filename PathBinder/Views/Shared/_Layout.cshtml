<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PathBinder</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@1&family=Eczar:wght@700&family=Gelasio&family=Roboto+Condensed&family=Tauri&family=Teko:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css"/>
    <link href="https://www.dafontfree.net/embed/bmV4dXNzZXJpZi1yZWd1bGFyLXJlZ3VsYXImZGF0YS82Ni9uLzE2MDM1Ni9OZXh1c1NlcmlmLVJlZ3VsYXIub3Rm" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <nav>
            <a class="navbar-brand" asp-area="" asp-controller="Main" asp-action="Library" id="title">PathBinder</a>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
